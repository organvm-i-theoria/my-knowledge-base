{
  "name": "knowledge-base",
  "version": "1.0.0",
  "description": "Personal knowledge database system - Token-optimized Claude conversation export & archive",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "prepare-db": "npm run migrate && npm run seed",
    "prestart": "npm run prepare-db",
    "preweb": "npm run prepare-db",
    "pretest": "npm run prepare-db",
    "export": "node dist/export.js",
    "dev": "tsx src/index.ts",
    "export:dev": "tsx src/export.ts",
    "sync": "./scripts/sync-cloud.sh",
    "ingest:all": "tsx src/export.ts",
    "watch": "tsx src/watch.ts",
    "watch:semantic": "tsx src/watch.ts --with-embeddings",
    "watch:smoke": "tsx scripts/watch-smoke-test.ts",
    "search": "tsx src/search.ts",
    "search:semantic": "tsx src/semantic-search.ts",
    "search:hybrid": "tsx src/search-hybrid-cli.ts",
    "generate-embeddings": "tsx src/generate-embeddings.ts",
    "extract-insights": "tsx src/extract-insights-cli.ts",
    "smart-tag": "tsx src/smart-tag-cli.ts",
    "smart-tag:backfill": "tsx src/bulk-tag-backfill-cli.ts",
    "chunking:metrics": "tsx src/chunking-metrics-cli.ts",
    "reprocess:documents": "tsx src/reprocess-documents-cli.ts",
    "find-relationships": "tsx src/find-relationships-cli.ts",
    "summarize": "tsx src/summarize-cli.ts",
    "web": "tsx src/web-server.ts",
    "export-obsidian": "tsx src/export-obsidian.ts",
    "export-incremental": "tsx src/export-incremental.ts",
    "export-processed-pkb": "tsx src/export-processed-pkb.ts",
    "pkb:search": "tsx src/pkb-search-cli.ts",
    "backup": "tsx scripts/backup.ts",
    "migrate": "tsx scripts/migrate.ts",
    "seed": "tsx scripts/seed-db.ts",
    "redact:scan": "tsx src/redaction-cli.ts scan",
    "redact:apply": "tsx src/redaction-cli.ts apply",
    "redact:validate": "tsx src/redaction-cli.ts validate",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "benchmark": "RUN_BENCHMARKS=true vitest run benchmarks/",
    "build:react": "cd web-react && npm run build"
  },
  "keywords": [
    "knowledge-base",
    "claude",
    "conversation-export",
    "atomization"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@types/js-yaml": "^4.0.9",
    "better-sqlite3": "^11.7.0",
    "chokidar": "^5.0.0",
    "chromadb": "^1.9.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "jszip": "^3.10.1",
    "openai": "^4.77.3",
    "p-limit": "^4.0.0",
    "p-retry": "^7.1.1",
    "pdf-parse": "^2.4.5",
    "playwright": "^1.49.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/pdf-parse": "^1.1.5",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "supertest": "^7.2.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.17"
  }
}
